
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Email format:</label>
      <div class="col-sm-10">
        <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
      </div>
    </div>
    <%= form_for @user do |f| %>
      <%= f.text_field :name, placeholder: "First and last name", class: "form-control" %><br>
      <%= f.text_field :email, placeholder: "Enter email", class: "form-control" %><br>
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %> <br>
       <!-- <%= f.password_field :password_confirmation, placeholder: "Enter password again", class: "form-control" %><br></br> -->
      <%= f.submit class: "btn btn-primary" %>
     <% end %>
